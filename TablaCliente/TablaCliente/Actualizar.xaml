<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TablaCliente.Actualizar">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#212121">
            <Frame CornerRadius="20" 
           HasShadow="False" 
           BackgroundColor="#d4d4d4" 
           Margin="10" 
           HorizontalOptions="Center">
                <StackLayout>
                    <Label Text="Actualizar un cliente"
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="#A38633"
                   HorizontalOptions="Center" />
                </StackLayout>
            </Frame>
            <Frame CornerRadius="20" 
       HasShadow="False" 
       BackgroundColor="#d4d4d4" 
       Margin="20" 
       VerticalOptions="FillAndExpand">
                <StackLayout>
                    <Entry x:Name="txtId" Placeholder="Ingrese el Id" TextColor="Black" Margin="10" PlaceholderColor="#aaa" Keyboard="Numeric"/>
                    <Entry x:Name="txtNombre" Placeholder="Nombre" TextColor="Black" Margin="10" PlaceholderColor="#aaa" />
                    <Entry x:Name="txtApellidoPaterno" Placeholder="Apellido Paterno" TextColor="Black" Margin="10" PlaceholderColor="#aaa" />
                    <Entry x:Name="txtApellidoMaterno" Placeholder="Apellido Materno" TextColor="Black" Margin="10" PlaceholderColor="#aaa" />
                    <Entry x:Name="txtEdad" Placeholder="Edad" TextColor="Black" Margin="10" PlaceholderColor="#aaa" Keyboard="Numeric" />
                    <Entry x:Name="txtEmail" Placeholder="Email" TextColor="Black" Margin="10" PlaceholderColor="#aaa" Keyboard="Email" />
                    <Button x:Name="btnBuscar" Text="Buscar" Margin="10" Clicked="btnBuscar_Clicked" BackgroundColor="#292929" TextColor="#A38633" CornerRadius="10" />
                    <Button x:Name="btnGuardar" Text="Guardar" Margin="10" Clicked="btnGuardar_Clicked" BackgroundColor="#292929" TextColor="#A38633" CornerRadius="10" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>